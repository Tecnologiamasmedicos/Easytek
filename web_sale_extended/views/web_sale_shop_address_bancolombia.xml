<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="address_bancolombia" name="Address Management Bancolombia">
        <title>Página comprador | www.masmedicos.co</title>
        <t t-set="no_footer" t-value="1"/>
        <t t-call="website.layout">
            <style>
                @font-face {
                    font-family: CIBFontSans-Regular;
                    src: url('../static/src/fonts/CIBFontSans-Regular.woff') format("woff"),
                    url('../static/src/fonts/CIBFontSans-Regular.otf') format('truetype');
                }
                *{
                    font-family: CIBFontSans-Regular;
                }
                #submit_shop {
                    background-color: #FDDA24; 
                    color: black;
                }

                #submit_shop:hover {
                    opacity: 0.7;
                }
            </style>
            <div id="wrap">
                <div class="container oe_website_sale py-2">
                    <div class="row">
                        <div class="col-12">
                            <t t-call="website_sale.wizard_checkout">
                                <t t-set="step" t-value="20" />
                            </t>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-auto order-xl-2 d-none d-xl-block">
                            <t t-call="website_sale.cart_summary">
                                <t t-set="hide_coupon">True</t>
                                <t t-set="redirect" t-valuef="/shop/address"/>
                            </t>
                        </div>
                        <div class="col-12 col-xl order-xl-1 oe_cart">
                            <div>
                                <section class="s_text_block pt0 pb0" data-name="Text block">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12 pb0 pt0">
                                                <div class="clearfix s_alert_sm w-100" data-name="Alert">
                                                    <img class="img-fluid o_we_custom_image float-left" src="/web_sale_extended/static/src/images/il-help.svg" width="92" style="margin-top: 12px;" data-original-title="" title="" aria-describedby="tooltip561547"/>
                                                    <i class="fa-2x s_alert_icon" data-original-title="" title="" aria-describedby="tooltip831158"/>
                                                    <div class="s_alert_content" style="padding-top: 20px;">
                                                        <div style="text-align: left;">
                                                            <font color="#000000" style="font-size: 23px;">
                                                                <b>
                                                                    Cuida a los que más amas. Llena la siguiente información para adquirir tu Plan Familia Protegida. Es fácil y rápido.
                                                                </b>
                                                            </font>
                                                            <br/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <br/>
                                                <div style="text-align: left;">
                                                    <a class="btn btn-dark btn-lg btn-block" style="color: white; text-align: left;">
                                                        <i class="fa-solid fa-user"/>
                                                        Esta es la información del comprador del plan ¡Comencemos!
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                                <t t-if="error">
                                    <div class="alert alert-success alert-dismissable d-print-none" role="status" style="text-align:center;">
                                        <t t-if="error.get('error_message') == 'document_invalid'">
                                            <h4 class="text-danger">¡Upss! has registrado un documento que no es valido</h4>
                                        </t>
                                        <t t-else="">
                                            <h5 class="text-danger" t-esc="error.get('error_message')" />
                                        </t>
                                    </div>
                                </t>
                                <br/>
                                <form id="shop" action="/shop/address" method="post" class="checkout_autoformat" style="border: solid 1px rgba(0, 0, 0, 0.125); padding: 15px; border-radius: 10px;">
                                    <div class="form-row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="col-form-label" for="name">Primer Nombre*</label>
                                                <input type="text" name="name" t-attf-class="form-control #{error.get('name') and 'is-invalid' or ''}" t-att-value="'name' in checkout and checkout['name']" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="col-form-label" for="othernames">Segundo  Nombre</label>
                                                <input type="text" name="othernames" t-attf-class="form-control #{error.get('othernames') and 'is-invalid' or ''}" t-att-value="'othernames' in checkout and checkout['othernames']" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="col-form-label" for="lastname">Primer  Apellido*</label>
                                                <input type="text" name="lastname" t-attf-class="form-control #{error.get('lastname') and 'is-invalid' or ''}" t-att-value="'lastname' in checkout and checkout['lastname']"/>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="col-form-label" for="lastname2">Segundo  Apellido</label>
                                                <input type="text" name="lastname2" t-attf-class="form-control #{error.get('lastname2') and 'is-invalid' or ''}" t-att-value="'lastname2' in checkout and checkout['lastname2']" />
                                            </div>
                                        </div>
                                        <div class="w-100"/>
                                        <div t-attf-class="form-group #{error.get('email') and 'o_has_error' or ''} col-lg-6" id="div_email">
                                            <label class="col-form-label" for="email">Email*</label>
                                            <input type="email" name="email" t-attf-class="form-control #{error.get('email') and 'is-invalid' or ''}" t-att-value="'email' in checkout and checkout['email']" />
                                        </div>
                                        <div t-attf-class="form-group #{error.get('phone') and 'o_has_error' or ''} col-lg-6" id="div_phone">
                                            <label class="col-form-label" for="phone">Teléfono*</label>
                                            <div class="input-group">
                                                <input type="text" name="code_phone" class="form-control col-lg-3" readonly="True" />
                                                <input type="text" name="phone" t-attf-class="form-control col-lg-9 #{error.get('phone') and 'is-invalid' or ''}" t-att-value="'' in checkout and checkout['']" />
                                            </div>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('') and 'o_has_error' or ''} col-lg-6">
                                            <label class="col-form-label" for="document">Tipo de documento*</label>
                                            <select name="document" class="selectpicker" id="document" t-attf-class="form-control #{error.get('') and 'is-invalid' or ''}" t-att-mode="mode[1]">
                                                <option value="" selected="True">Tipo documento...</option>
                                                <t t-foreach="document_types" t-as="dt">
                                                    <option t-att-value="dt.id">
                                                        <t t-esc="dt.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="col-form-label" for="identification_document">Número de documento*</label>
                                                <input type="text" name="identification_document" t-attf-class="form-control #{error.get('identification_document') and 'is-invalid' or ''}" t-att-value="'identification_document' in checkout and checkout['identification_document']" />
                                            </div>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('') and 'o_has_error' or ''} col-lg-6">
                                            <label class="col-form-label" for="birthdate_date">Fecha nacimiento*</label>
                                            <input type="date" name="birthdate_date" t-attf-class="form-control #{error.get('birthdate_date') and 'is-invalid' or ''}" t-att-value="'birthdate_date' in checkout and checkout['birthdate_date']" />
                                            <div id="div_warning" class="alert alert-warning" role="alert" style="background-color: #fff3cd !important; border-color: #ffeeba !important; color: #856404 !important; display: none;">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <i class="fa fa-times" aria-hidden="false"></i>
                                                </button>
                                                <strong>Recuerda:</strong> El asegurado principal del plan debe tener entre 18 y 69 años.
                                            </div>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('') and 'o_has_error' or ''} col-lg-6">
                                            <label class="col-form-label" for="expedition_date">Fecha de exp del documento*</label>
                                            <input type="date" name="expedition_date" t-attf-class="form-control #{error.get('expedition_date') and 'is-invalid' or ''}" t-att-value="'expedition_date' in checkout and checkout['expedition_date']" />
                                        </div>
                                        <div class="w-100"/>
                                        <div t-attf-class="form-group #{error.get('street') and 'o_has_error' or ''} col-lg-6 div_street">
                                            <label class="col-form-label" for="street">Dirección*
                                                <span class="d-none d-md-inline"></span>
                                            </label>
                                            <input type="text" name="street" t-attf-class="form-control #{error.get('street') and 'is-invalid' or ''}" t-att-value="'street' in checkout and checkout['street']" />
                                        </div>
                                        <div t-attf-class="form-group #{error.get('country_address_id') and 'o_has_error' or ''} col-lg-6 div_country">
                                            <label class="col-form-label" for="country_address_id">País*</label>
                                            <select class="selectpicker" data-size="5" data-live-search="true" id="country_address_id" name="country_address_id" t-attf-class="form-control #{error.get('country_address_id') and 'is-invalid' or ''}" t-att-mode="mode[1]">
                                                <t t-foreach="countries" t-as="c">
                                                    <option t-att-value="c.id" t-att-selected="c.id == 49">
                                                        <t t-esc="c.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div t-attf-class="div_state_text form-group col-lg-6">
                                            <label class="col-form-label" for="state_id_text">Departamento / Provincia / Estado*</label>
                                            <input type="text" name="state_id_text" id="state_id_text" t-attf-class="form-control" t-att-value="'state_id_text' in checkout and checkout['state_id_text']" />
                                        </div>
                                        <div t-attf-class="form-group #{error.get('state_id') and 'o_has_error' or ''} col-lg-6 div_state">
                                            <label class="col-form-label" for="state_address_id">Departamento / Provincia / Estado*</label>
                                            <select class="selectpicker" data-size="4" id="state_address_id" data-live-search="true" name="state_address_id" t-attf-class="form-control #{error.get('state_address_id') and 'is-invalid' or ''}" data-init="1">
                                                <option value="">Seleccione el Departamento </option>
                                                <t t-foreach="country_states" t-as="s">
                                                    <option t-att-value="s.id" t-att-selected="s.id == ('state_address_id' in checkout and country and checkout['state_address_id'] != '' and int(checkout['state_address_id']))">
                                                        <t t-esc="s.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="div_city_text form-group col-md-6">
                                            <label class="col-form-label" for="city_text">Ciudad*</label>
                                            <input type="text" name="city_id_text" id="city_id_text" t-attf-class="form-control" t-att-value="'city_2' in checkout and checkout['city_2']" />
                                        </div>
                                        <div t-attf-class="form-group #{error.get('city') and 'o_has_error' or ''} col-md-6 div_city">
                                            <label class="col-form-label" for="city">Ciudad*</label>
                                            <select class="selectpicker" data-size="10" data-live-search="true" id="city" name="city" t-attf-class="form-control #{error.get('city') and 'is-invalid' or ''}" t-att-value="'city' in checkout and checkout['city']" t-att-style="(not country or not country.state_ids) and 'display: none'">
                                                <option value="">Seleccione la Ciudad</option>
                                                <t t-foreach="cities" t-as="c">
                                                    <option t-att-value="c.city_id.name" t-att-selected="c.name">
                                                        <t t-esc="c.name" />
                                                        <t t-esc="c.city_id.name" />
                                                        <t t-esc="c.city_id.state_id.name" />
                                                        <t t-esc="c.city_id.state_id.country_id.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <!-- Tipo de cuenta -->
                                        <div t-attf-class="form-group col-md-6" t-if="website_sale_order.main_product_id.categ_id.sponsor_id.id == 5132">
                                            <label class="col-form-label" for="bancolombia_types_account">Tipo de cuenta*</label>
                                            <select name="bancolombia_types_account" class="selectpicker" id="bancolombia_types_account" t-attf-class="form-control #{error.get('') and 'is-invalid' or ''}">
                                                <t t-foreach="bancolombia_types_account" t-as="bta">
                                                    <option t-att-value="bta" t-att-selected="bta == '7'">
                                                        <t t-esc="bancolombia_types_account[bta]" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="col-lg-6"/>
                                        <!-- Numero de cuenta -->
                                        <div class="col-lg-6" t-if="website_sale_order.main_product_id.categ_id.sponsor_id.id == 5132">
                                            <div class="form-group">
                                                <label class="col-form-label" for="account_number">Número de cuenta*</label>
                                                <input type="text" name="account_number" t-attf-class="form-control #{error.get('account_number') and 'is-invalid' or ''}" t-att-value="'account_number' in checkout and checkout['account_number']" />
                                            </div>
                                        </div>
                                        <!-- confirmar Numero de cuenta -->
                                        <div class="col-lg-6" t-if="website_sale_order.main_product_id.categ_id.sponsor_id.id == 5132">
                                            <div class="form-group">
                                                <label class="col-form-label" for="confirm_account_number">Confirmar Número de cuenta*</label>
                                                <input type="text" name="confirm_account_number" t-attf-class="form-control #{error.get('confirm_account_number') and 'is-invalid' or ''}" t-att-value="'confirm_account_number' in checkout and checkout['confirm_account_number']" />
                                            </div>
                                        </div>
                                        <t t-set='zip_city' />
                                        <div t-attf-class="form-group #{error.get('zip') and 'o_has_error' or ''} col-md-3 div_zip" style="color: transparent; display: none;">
                                            <label class="col-form-label label-optional" for="zip">Código postal</label>
                                            <input style="visibility: hidden;" type="text" name="zip" t-attf-class="form-control #{error.get('zip') and 'is-invalid' or ''}" t-att-value="'zip' in checkout and checkout['zip']" readonly="true"/>
                                            <input type="hidden" name="zip_id"/>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-check">
                                                <abbr title='Autorizo a BANCOLOMBIA S.A para debitar la suma informada por Pan-American Life de Colombia con ocasión del pago de la póliza que en este documento se constituye, de mi Cuenta de Ahorros o Cuenta Corriente, Depósito de Bajo Monto “Bancolombia a la Mano” o realizar el cargo a mi Tarjeta de Crédito. Me comprometo a tener los fondos suficientes en mi Cuenta de Ahorros o Corriente Depósito de Bajo Monto “Bancolombia a la Mano”, o a mantener la disponibilidad de cupo de mi Tarjeta de Crédito, según el caso, para cubrir el valor facturado el día de cobro. Si no se encontraren fondos en mi Cuenta Corriente, autorizo para que se afecte el cupo de sobregiro disponible. Así mismo, me comprometo a actualizar cualquier cambio de cuenta o número de Tarjeta de Crédito para continuar con el débito o cargo automático.' style="text-decoration: none;">
                                                    <input class="form-check-input" type="checkbox" value="" name="ada" id="defaultCheck3"/>
                                                    <label class="form-check-label" for="ada">
                                                        Acepto débito automático
                                                    </label>
                                                </abbr>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" name="tycp" id="defaultCheck4"/>
                                                <label class="form-check-label" for="tycp">
                                                    Acepto términos, condiciones y politica de tratamiento de datos
                                                    <a href="#terminos_bancolombia" id="btn_terminos_bancolombia" style="color: #59CBE8;"> (leer)</a>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12" id="terminos_bancolombia" style='display: none;'/>
                                        <div class="w-100"/>
                                        <t t-if="mode == ('new', 'billing') and not only_services">
                                            <div class="col-lg-12">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" id='shipping_use_same' class="mr8" name='use_same' value="1" checked='checked'/>
                                                            Ship to the same address
                                                        <span class='ship_to_other text-muted' style="display: none">&amp;nbsp;(<i>Your shipping address will be requested later) </i>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                    <input type="hidden" name="assisted_purchase" t-att-value="assisted_purchase" />
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                    <input type="hidden" name="submitted" value="1" />
                                    <input type="hidden" name="partner_id" t-att-value="website_sale_order.partner_id and website_sale_order.partner_id.id or partner_id or '0'" />
                                    <input type="hidden" name="partner_country_id" t-att-value="('country_id' in checkout and checkout['country_id'].id or website_sale_order.partner_id.country_id and website_sale_order.partner_id.country_id.id or '0')" />
                                    <input type="hidden" name="partner_document_type" t-att-value="('document_type_id' in checkout and checkout['document_type_id'].id or website_sale_order.partner_id.document_type_id and website_sale_order.partner_id.document_type_id.id or '0')" />
                                    <input type="hidden" name="callback" t-att-value="callback" />
                                    <p/>
                                    <div class="d-flex justify-content-end">
                                        <button class="btn btn-custom mb32" id="submit_shop">
                                            <span>Siguiente ></span>
                                            <i class="fa fa-chevron-right" />
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="https://kit.fontawesome.com/e3d39cbc1e.js" crossorigin="anonymous"></script>
        </t>
    </template>
</odoo>