<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend_assistand_purchase" inherit_id="website.assets_frontend" name="JS Venta asistida">
		<xpath expr="." position="inside">			
            <script type="text/javascript" src="/web_sale_extended/static/src/js/assisted_purchase.js"></script>
		</xpath>
	</template>
    
    
    <template id="confirm_assisted_purchase" name="Confirmacion venta asistida">
        <t t-call="website.layout">
            <div class="container"
                style="margin-top: 50px; display: flex; align-items: center; flex-direction: column; justify-content: center; height: 70vh;">
                <h1>Confirmacion de Venta Asistida</h1><br/>
                <table class="row row-4" align="center" width="100%" border="0" cellpadding="0" cellspacing="0"
                    role="presentation" style="mso-table-lspace: 0; mso-table-rspace: 0;">
                    <tbody>
                        <tr>
                            <td>
                                <table class="row-content" align="center" border="0" cellpadding="0" cellspacing="0"
                                    role="presentation" style="mso-table-lspace: 0; mso-table-rspace: 0;" width="900">
                                    <tbody>
                                        <tr>
                                            <th class="column" width="16.666666666666668%"
                                                style="mso-table-lspace: 0; mso-table-rspace: 0; font-weight: 400; text-align: left; vertical-align: top;">
                                                <table class="empty_block" width="100%" border="0" cellpadding="0"
                                                    cellspacing="0" role="presentation"
                                                    style="mso-table-lspace: 0; mso-table-rspace: 0;">
                                                    <tr>
                                                        <td
                                                            style="padding-right:0px;padding-bottom:5px;padding-left:0px;padding-top:5px;">
                                                            <div></div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </th>
                                            <th class="column" width="16.666666666666668%"
                                                style="mso-table-lspace: 0; mso-table-rspace: 0; font-weight: 400; text-align: left; vertical-align: top;">
                                                <table class="image_block" width="100%" border="0" cellpadding="0"
                                                    cellspacing="0" role="presentation"
                                                    style="mso-table-lspace: 0; mso-table-rspace: 0;">
                                                    <tr>
                                                        <td
                                                            style="width:100%;padding-right:0px;padding-left:0px;padding-top:5px;padding-bottom:5px;">
                                                            <div align="center" style="line-height:10px"><img
                                                                    src="https://d15k2d11r6t6rl.cloudfront.net/public/users/Integrators/BeeProAgency/616330_598192/mail.png"
                                                                    style="display: block; height: auto; border: 0; width: 128px; max-width: 100%;"
                                                                    width="128" /></div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </th>
                                            <th class="column" width="50%"
                                                style="mso-table-lspace: 0; mso-table-rspace: 0; font-weight: 400; text-align: left; vertical-align: top;">
                                                <table class="heading_block" width="100%" border="0" cellpadding="0"
                                                    cellspacing="0" role="presentation"
                                                    style="mso-table-lspace: 0; mso-table-rspace: 0;">
                                                    <tr>
                                                        <td style="text-align:center;width:100%;padding-top:5px;">
                                                            <h1
                                                                style="margin: 0; color: #3333cc; direction: ltr; font-family: Arial, Helvetica Neue, Helvetica, sans-serif; font-size: 17px; font-weight: normal; letter-spacing: normal; line-height: 120%; text-align: center; margin-top: 0; margin-bottom: 0;">
                                                                <strong>¡Súper!</strong> Estamos a un paso para que empieces a
                                                                disfrutar los beneficios que ofrece Más Médicos.<br />
                                                            </h1>
                                                        </td>
                                                    </tr>
                                                </table>
                                                <table class="text_block" width="100%" border="0" cellpadding="10"
                                                    cellspacing="0" role="presentation"
                                                    style="mso-table-lspace: 0; mso-table-rspace: 0; word-break: break-word;">
                                                    <tr>
                                                        <td>
                                                            <div style="font-family: sans-serif">
                                                                <div
                                                                    style="font-size: 14px; color: #787777; line-height: 1.2; font-family: Arial, Helvetica Neue, Helvetica, sans-serif;">
                                                                    <p style="margin: 0; text-align: center;">
                                                                        Te enviaré un link por correo electrónico y te espero
                                                                        para guiarte en el proceso.</p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                                <table class="button_block" width="100%" border="0" cellpadding="0"
                                                    cellspacing="0" role="presentation"
                                                    style="mso-table-lspace: 0; mso-table-rspace: 0;">
                                                    <tr>
                                                        <td
                                                            style="padding-bottom:15px;padding-left:10px;padding-right:10px;padding-top:35px;text-align:center;">
                                                            <div align="center">
                                                                <a href="/beneficiary-detail?send_email=1"
                                                                    style="text-decoration:none;font-family:Arial, Helvetica Neue, Helvetica, sans-serif;text-align:center;">
                                                                    <button id="btn_email" type="button" class="btn btn-primary"
                                                                        style="margin-right: 15px; line-height: 1;">
                                                                        <span
                                                                            style="font-size: 14px; word-break: break-word; mso-line-height-alt: 32px;">
                                                                            Enviar enlace de pago por <br /> Correo Electrónico
                                                                        </span>
                                                                    </button>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </th>                                            
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div id="response_email"
                    style="color: #8c8c8c; width: 100%; text-align: center; font-size: 20px; display: none; font-family:Arial, Helvetica Neue, Helvetica, sans-serif;">
                    <span>Se envio exitosamente un correo a:</span>
                    <t t-esc="order.partner_id.email" /><br/>
                    <span>Para crear otro plan, cierra esta pestaña y regresa al portal de venta asistida</span>
                </div>
            </div>
        </t>
    </template>
    <template id="confirm_assisted_purchase_benefice" name="Confirmacion venta asistida">
        <t t-call="website.layout">
            <div class="container"
                style="margin-top: 50px; display: flex; align-items: center; flex-direction: column; justify-content: center; height: 70vh;">
