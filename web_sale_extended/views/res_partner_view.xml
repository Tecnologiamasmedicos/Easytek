<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_res_partner_document_type_form">
        <field name="name">res.partner.document.type.form</field>
        <field name="model">res.partner.document.type</field>
        <field name="arch" type="xml">
            <form string="Tipos de Documentos">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="abbreviation"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_res_partner_document_type_tree">
        <field name="name">res.partner.document.type.form</field>
        <field name="model">res.partner.document.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Documentos" editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="abbreviation"/>
            </tree>
        </field>
    </record>
    <record id="action_res_partner_document_type_tree" model="ir.actions.act_window">
        <field name="name">Tipos de Documento</field>
        <field name="res_model">res.partner.document.type</field>
        <field name="view_mode">tree,form</field>
        <field ref="view_res_partner_document_type_tree" name="view_id"/>
    </record>
    <menuitem
        name="Tipos de Documento"
        id="res_partner_document_types_menu"
        parent="contacts.menu_localisation"
        action="action_res_partner_document_type_tree"
        sequence="5"
        />
    <record id="view_partner_form_partner" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_vat.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="website" position="before">
                <field name='birthdate_date' />
                <field name='ocupation' />
                <field name='gender' />
                <field name='relationship' />
                <field name='address_beneficiary' />
                <field name='beneficiary_country_id' />
                <field name='beneficiary_state_id' />
                <field name='beneficiary_zip_id' />
                <field name='expedition_date' />
                <field name='marital_status' />
                <field name='clerk_code' />
                <field name='sponsor_id' />
            </field>
            <field name="street" position="after">
                <field name='city_2' placeholder="Ciudad" style="display: block" />
                <field name='state_2' placeholder="Departamento / Provincia / Estado" style="display: block" />
            </field>
        </field>
    </record>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name='generates_accounting' attrs="{'invisible':[('company_type','!=','sponsor')]}"/>
            </xpath>
            <xpath expr="//field[@name='type']" position="before">
                <field name="pet_type" string="Tipo de mascota" attrs="{'invisible': [('company_type', '!=', 'pet')]}"/>
            </xpath>

            <!-- Tomados de studio -->
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='type']" position="attributes">
                <attribute name="attrs">{"invisible": ["&amp;",["is_company","=",True],["company_type","=","pet"]], "readonly": [["user_ids","!=",[]]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='street']" position="attributes">
                <attribute name="attrs">{"readonly": [["type","=","contact"],["parent_id","!=",False]], "invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='city_2']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='state_2']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='street2']" position="attributes">
                <attribute name="attrs">{"readonly": [["type","=","contact"],["parent_id","!=",False]], "invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='zip']" position="attributes">
                <attribute name="attrs">{"readonly": [["type","=","contact"],["parent_id","!=",False]], "invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]/field[@name='country_id']" position="attributes">
                <attribute name="attrs">{"readonly": [["type","=","contact"],["parent_id","!=",False]], "invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='l10n_co_document_type']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='ciiu']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='vat']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='generates_accounting']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='function']" position="attributes">
                <attribute name="attrs">{"invisible": ["&amp;",["is_company","=",True],["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[1]/field[@name='phone']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[2]/field[@name='mobile']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[3]/field[@name='email']" position="attributes">
                <attribute name="attrs">{"required": [["user_ids","!=",[]]], "invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='property_account_position_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='document_type_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='identification_document']" position="attributes">
                <attribute name="attrs">{"required": [["document_type_id","!=",False]], "invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='birthdate_date']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='ocupation']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='gender']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='relationship']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='address_beneficiary']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='beneficiary_country_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='beneficiary_state_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='beneficiary_zip_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='expedition_date']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='marital_status']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='clerk_code']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='sponsor_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","person"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='website']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='title']" position="attributes">
                <attribute name="attrs">{"invisible": ["&amp;",["is_company","=",True],["company_type","=","pet"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["company_type","=","pet"]]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>