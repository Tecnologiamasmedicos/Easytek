<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_envio_codigo" model="mail.template">
            <field name="name">Código de verificación</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="partner_to">${object.partner_id}</field>
            <field name="subject">Código de verificación</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        El codigo de verificación es: ${ctx['codigo']}
                        <br/>
                        Ingrese este codigo en la página de la compra del seguro.
                        <br/>
                        Este código expira en 3 minutos.
                    </p>
                </div>
            </field>
            <field name="lang">${object.company_id.contact_center_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>